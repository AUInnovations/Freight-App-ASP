@model IEnumerable<FreightAppASP.Models.Lanes>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CarrierId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DestinationCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OriginCity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Radius)
        </th>
        <th></th>
    </tr>
    
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CarrierId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DestinationCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OriginCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Radius)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.LaneId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.LaneId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.LaneId">Delete</a>
        </td>
    </tr>
}
</table>
